<?xml version="1.0" encoding="UTF-8"?>
 <persistence xmlns="http://java.sun.com/xml/ns/persistence"  version="2.0">
     <persistence-unit name="person_xworkz" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

		<!--class defines mapping between Object to tables or tables to object  -->
		<!--No of pojo/DTO class equal to number class tag  -->
        <class>com.xworkz.app.Person</class>       

        <properties>
            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/xworkz"/>
            <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
            <property name="javax.persistence.jdbc.user" value="root"/>
            <property name="javax.persistence.jdbc.password" value="Xworkzodc@123"/>
<!--hibernate.dialect- is specific to data base
dialect is responsible for generating sql query specific to data base
it also converts java data types into sql data types  -->
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQL5Dialect"/>
            <property name="hibernate.show_sql" value="true"/><!-- show.sql command will display sql query in console -->
            <property name="hibernate.format_sql" value="true"/><!-- format sql query-->
            <property name="hibernate.hbm2ddl.auto" value="create"/>
            	<!-- command tells jpa/hibernate to  create/update/drop etc  tables into database -->
            	<!--hbm-hibernate mapping to data definition language  -->
            	
        </properties>
    </persistence-unit>  
      </persistence>